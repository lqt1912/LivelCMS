@model LivelCMSSystem.Models.ReceiptViewModel
@{
    ViewData["Title"] = "ReceiptDetail";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h4 class="pl-3 pt-3 pb-3 ">Tạo chứng từ </h4>
@inject LivelCMSSystem.Core.Repository.ICustomerService customerService
<hr />
<div class="row pl-3 ">
    <div class="col-md-4">
        <form asp-action="AddReceipt">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CustomerId" class="control-label">Tên khách hàng </label>
                <input disabled class="form-control" value="@customerService.Read(Model.CustomerId.Value).Name" />
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReceivedAmount" class="control-label">Số tiền nhận(VND) </label>
                <input disabled value="@Model.ReceivedAmount.Value.ToString("N0")" class="form-control" />
                <span asp-validation-for="ReceivedAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Mô tả </label>
                <input disabled asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a asp-action="UpdateReceipt" asp-controller="Receipt" asp-route-id="@Model.Id" class="btn btn-primary"> Cập nhật chứng từ</a>
            </div>
        </form>
    </div>
</div>


