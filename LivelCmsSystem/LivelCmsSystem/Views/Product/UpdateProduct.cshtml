@model LivelCMSSystem.Models.ProductViewModel

@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h4 class="pl-3 pt-3 pb-3 ">Cập Nhật Sản Phẩm</h4>
<div class="row pl-3 ">
    <div class="col-md-4">
        <form asp-action="UpdateProduct" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">Tên sản phẩm</label>
                <input hidden asp-for="@Model.Name" class="form-control" />
                <input disabled asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label">Hãng sản xuất</label>
                @*<select hidden class="chosen-select form-control" style="border-radius: 0px !important; " asp-for="@Model.Brand" asp-items="@(new SelectList(ViewBag.Brand as List<LivelCMSSystem.Models.BrandViewModel>,"Id", "BrandName"))">
                </select>*@
                <input hidden asp-for="@Model.Brand" class="form-control" />
                <input disabled value=@ViewBag.Brand class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitPrice" class="control-label">Đơn giá</label>
                <input asp-for="@Model.UnitPrice" class="form-control"  />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductType" class="control-label">Loại sản phẩm </label>
                @*<select hidden class=" chosen-select form-control" asp-for="@Model.ProductType" asp-items="@(new SelectList(ViewBag.ProductType as List<LivelCMSSystem.Models.ProductTypeViewModel>,"Id", "ProductTypeName"))">
        </select>*@
                <input disabled value="@ViewBag.ProductType" class="form-control" />
                <input hidden asp-for="@Model.ProductType" class="form-control" />
                <span asp-validation-for="ProductType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Cập nhật sản phẩm " class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


