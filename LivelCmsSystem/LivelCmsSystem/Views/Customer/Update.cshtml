
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h4 class="pl-3 pt-3 pb-3 ">Chỉnh sửa</h4>
<div class="row pl-3 ">
    <div class="col-md-4">
        @Html.Partial("_StatusMessages")
        <form asp-action="Update" asp-controller="Customer" method="post">

            <div class="form-group">
                <label class="control-label">Nhập Id của khách hàng</label>
                <input class="form-control" name="Id" />
            </div>
            <div class="form-group">
                <input type="submit" value="Kiểm tra " class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>




